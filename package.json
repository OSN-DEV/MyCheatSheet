{
  "name": "my-cheat-sheet",
  "productName": "My CheatSheet",
  "version": "1.0.0",
  "NODE_ENV": "production",
  "main": "dist/main.js",
  "author": "OSN-DEV <osndev1973@gmail.com>",
  "license": "MIT",
  "scripts": {
    "buildexe": "cross-env NODE_ENV=\"production\" electron-builder --win --x64",
    "dev": "rimraf dist && run-p dev:*",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon .",
    "dev:tailwind": "tailwindcss -i ./src/renderer/input.css -o ./dist/output.css --watch"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "build": {
    "appId": "com.osndev.myelectronboilerplate",
    "directories": {
      "output": "binary"
    },
    "productName": "my-electron-boilerplate",
    "files": [
      "assets",
      "src",
      "dist",
      "package.json",
      "yarn.lock"
    ],
    "mac": {
      "icon": "assets/app.ico",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/app-icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/react-scroll": "^1.8.7",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "electronmon": "^2.0.2",
    "html-webpack-plugin": "^5.5.0",
    "jsonschema": "^1.4.1",
    "mini-css-extract-plugin": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scroll": "^1.8.9",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "wait-on": "^6.0.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "electron": "^22.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3"
  }
}
